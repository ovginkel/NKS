<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="6dp">

    <ImageView
        android:id="@+id/imageViewChannelMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/new_message_icon"
        android:contentDescription="@string/channel_message" />

    <ImageView
        android:id="@+id/imageViewPrivateChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_lock_white_18dp"
        android:contentDescription="@string/private_channel" />

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/textViewChannelName"
        style="@style/SecondaryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/item_chanel_text" /><!-- android:layout_marginLeft="4dp" -->


</LinearLayout>